@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-12 col-md-4 offset-md-1">
        <div class="register-form">
            <div class="mb-5">
                <h1>Register</h1>
                <p class="lead">Create an account to start playing.</p>
            </div>
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h4>Create a new account.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="btn btn-block btn-primary">Register</button>
            </form>

            <p class="small my-4 text-center">Already have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Log in</a>.</p>
        </div>
    </div>
    <div class="col-12 col-md-6 offset-md-1 d-flex">
        <img src="~/img/dog-9.jpg" class="w-100" />
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}