@model Quiz.Web.ViewModels.Tests.TestFormModel
@{
    this.ViewData["Question"] = "Add Test";
}

<h1 class="text-center">Create Test</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="@Model.Title"></label>
        <input asp-for="@Model.Title" class="form-control" placeholder="Title" />
        <span asp-validation-for="@Model.Title" class="text-danger"></span>
    </div>

    <hr />

    @for (int q = 0; q < @Model.Questions.Length; q++)
    {
        <div class="m-3">
            <label>Question @(q + 1)</label>
            <input value="" asp-for="@Model.Questions[q].Question" class="form-control" placeholder="Question @(q + 1)" />
            <span asp-validation-for="@Model.Questions[q].Question" class="text-danger"></span>
        </div>

        @for (int a = 0; a < 4; a++)
        {
            <div class="row col-md-10 m-1">
                <input value="" asp-for="@Model.Questions[q].Answers[a].Answer" class="form-control" placeholder="Answer @(a + 1)" />
                <span asp-validation-for="@Model.Questions[q].Answers[a].Answer" class="text-danger"></span>
                <input asp-for="@Model.Questions[q].Answers[a].Correct" class="form-check-input">
            </div>
        }

        <hr />
    }

    <button type="submit" class="btn btn-block btn-primary">Submit</button>
</form>
